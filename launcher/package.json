{
  "name": "engivault-launcher",
  "version": "1.0.0",
  "description": "Cross-platform installer for ENGiVAULT API - Professional engineering calculations platform",
  "main": "main-simple.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "dist": "npm run build:all",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.engivault.launcher",
    "productName": "ENGiVAULT Installer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main-full.js",
      "renderer/**/*",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "category": "Development"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ENGiVAULT Installer"
    },
    "dmg": {
      "title": "ENGiVAULT Installer",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "author": "Luqman Ismat <luqman@engivault.com>",
  "license": "MIT",
  "homepage": "https://github.com/Luqman-Ismat/engivault-api",
  "repository": {
    "type": "git",
    "url": "https://github.com/Luqman-Ismat/engivault-api.git"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "node-fetch": "^3.3.2",
    "extract-zip": "^2.0.1",
    "tar": "^6.2.0",
    "fs-extra": "^11.1.1",
    "progress": "^2.0.3",
    "semver": "^7.5.4",
    "which": "^4.0.0",
    "sudo-prompt": "^9.2.1"
  },
  "keywords": [
    "engivault",
    "installer",
    "engineering",
    "python",
    "excel",
    "npm",
    "cross-platform"
  ]
}
